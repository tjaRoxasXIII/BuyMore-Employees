<h2>Edit Profile</h2>

<form method="POST" action="/employees/<%=@employee.id%>/profile/edit">
    <input id="hidden" type="hidden" name="_method" value="patch">
    <h3>Email: <input type="text" name="email" value="<%=@employee.email%>"></h3>
    <h3>Password: <input type="password" name="password"></h3>
    <input type="submit" value="Save Changes">
</form>
<form method="GET" action="/employees/<%=@employee.id%>/profile%">
    <input type="submit" value="Go back">
</form>